<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <!-- Allow connections (e.g. via fetch) -->
        <policy id="connect-src">
            <values>
                <value id="sovendus" type="host">https://*.sovendus.com</value>
                <value id="sovendus-benefits" type="host">https://www.sovendus-benefits.com</value>
                <value id="sovendus-campaign" type="host">https://www.sovendus-campaign.com</value>
                <value id="sovendus-connect" type="host">https://www.sovendus-connect.com</value>
                <value id="sovendus-network" type="host">https://www.sovendus-network.com</value>
            </values>
        </policy>
        
        <!-- Allow fonts -->
        <policy id="font-src">
            <values>
                <value id="sovendus" type="host">https://*.sovendus.com</value>
            </values>
        </policy>
        
        <!-- Allow frames -->
        <policy id="frame-src">
            <values>
                <value id="sovendus" type="host">https://*.sovendus.com</value>
                <value id="sovendus-benefits" type="host">https://www.sovendus-benefits.com</value>
                <value id="sovendus-campaign" type="host">https://www.sovendus-campaign.com</value>
                <value id="sovendus-connect" type="host">https://www.sovendus-connect.com</value>
                <value id="sovendus-network" type="host">https://www.sovendus-network.com</value>
            </values>
        </policy>
        
        <!-- Allow images -->
        <policy id="img-src">
            <values>
                <value id="sovendus" type="host">https://*.sovendus.com</value>
            </values>
        </policy>
        
        <!-- Allow scripts -->
        <policy id="script-src">
            <values>
                <value id="sovendus" type="host">https://*.sovendus.com</value>
                <value id="sovopt" type="host">https://www.sovopt.com</value>
                <value id="static-sovopt" type="host">https://static.sovopt.com</value>
                <value id="sovopt-getback" type="host">https://www.getback.ch</value>
            </values>
        </policy>
        
        <!-- Allow styles -->
        <policy id="style-src">
            <values>
                <value id="static-sovopt-getback" type="host">https://static.getback.ch</value>
                <value id="sovendus" type="host">https://*.sovendus.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
