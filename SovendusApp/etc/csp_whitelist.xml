<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
	<policies>
		<!-- Allow scripts from sovopt.com -->
		<policy id="default-src">
			<values>
				<value id="https://www.sovopt.com" type="host" />
				<value id="https://static.sovopt.com" type="host" />
				<value id="https://api.sovendus.com" type="host" />
				<value id="https://press-order-api.sovendus.com" type="host" />
			</values>
		</policy>
		<policy id="script-src">
			<values>
				<value id="https://www.sovopt.com" type="host" />
				<value id="https://static.sovopt.com" type="host" />
				<value id="https://api.sovendus.com" type="host" />
				<value id="https://press-order-api.sovendus.com" type="host" />
			</values>
		</policy>
		<policy id="connect-src">
			<values>
				<value id="https://www.sovopt.com" type="host" />
				<value id="https://static.sovopt.com" type="host" />
				<value id="https://api.sovendus.com" type="host" />
				<value id="https://press-order-api.sovendus.com" type="host" />
			</values>
		</policy>
	</policies>
</csp_whitelist>
