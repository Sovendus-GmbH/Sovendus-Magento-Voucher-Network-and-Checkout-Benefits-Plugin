parameters:
  level: 5
  treatPhpDocTypesAsCertain: true
  paths:
    - .
  bootstrapFiles:
    - %currentWorkingDirectory%/vendor/autoload.php
  
  # Load Magento stubs from the installed package.
  scanFiles:
    - %currentWorkingDirectory%/vendor/magento/magento2-phpstorm-plugin/src/com/magento/idea/magento2plugin/stubs/magento.php

  excludePaths:
    - vendor/*