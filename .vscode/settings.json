{
  "cSpell.words": ["Magento"],
  "editor.formatOnSave": true, // Format files on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "prettier.requireConfig": true, // Ensure Prettier uses your configuration file
  "files.eol": "\n",
  "files.exclude": {
    "SovendusApp/sovendus-plugins-commons/node_modules": true
  },
  "search.exclude": {
    "SovendusApp/sovendus-plugins-commons/node_modules": true
  }
}
